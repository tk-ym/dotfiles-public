# Emacs key bind
bindkey -e

## starship
eval "$(starship init zsh)"

eval "$(sheldon source)"

## anyenv
export PATH="$HOME/.anyenv/bin:$PATH"
eval "$(anyenv init -)"

## pyenv
export PYENV_ROOT="$HOME/.anyenv/envs/pyenv"
